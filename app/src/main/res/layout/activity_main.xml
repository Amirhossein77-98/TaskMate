<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp"
        app:layout_constraintBottom_toTopOf="@id/nameInputLayout"
        app:layout_constraintTop_toBottomOf="@id/resetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="username, name"
        android:hint="@string/nameInputHint"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        app:boxBackgroundMode="filled"
        app:boxCornerRadiusTopStart="40dp"
        app:boxCornerRadiusTopEnd="40dp"
        app:boxCornerRadiusBottomStart="40dp"
        app:boxCornerRadiusBottomEnd="40dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/submitButton">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginEnd="15dp"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        app:icon="@drawable/baseline_send_24"
        app:iconGravity="end"
        app:iconPadding="8dp"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nameInputLayout"
        app:layout_constraintBottom_toBottomOf="@id/nameInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>